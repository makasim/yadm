{
  "name": "makasim/yadm",
  "type": "library",
  "description": "The fastest MongoDB object document mapper.",
  "keywords": ["model", "mongodb", "odm", "storage"],
  "license": "MIT",
  "authors": [
    {
      "name": "Maksym Kotliar",
      "email": "kotlyar.maksim@gmail.com"
    }
  ],
  "require": {
    "php": "^7.1",
    "mongodb/mongodb": "^1",
    "formapro/values": "^0.5.1",
    "makasim/json-patch-php": "^0.1.2"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.0"
  },
  "config": {
    "bin-dir": "bin"
  },
  "replace": {
    "formapro/yadm": "*"
  },
  "autoload": {
    "psr-4": { "Formapro\\Yadm\\": "src" },
    "files": ["src/functions_include.php"]
  },
  "autoload-dev": {
    "psr-4": { "Formapro\\Yadm\\Tests\\": "tests" }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "0.5-dev"
    }
  }
}
